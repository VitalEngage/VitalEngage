<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.null" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/colorEet</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="textAppearanceButton">@style/ButtonText</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="AppTheme.NoActionBar.LoginActivity">
        <item name="snackbarStyle">@style/Widget.App.Snackbar.Login</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.Snackbar.TextView.Login</item>
    </style>

    <style name="AppTheme.NoActionBar.MessageListActivity">
        <item name="snackbarStyle">@style/Widget.App.Snackbar.MessageList</item>
    </style>

    <style name="Widget.App.Snackbar.Login" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.App.Snackbar.TextView.Login" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAppearance">@style/TextViewSubtitle</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="Widget.App.Snackbar.MessageList" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="ButtonText" parent="AppTheme.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewTitle" parent="AppTheme.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ParentStyle" parent="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewSubtitle" parent="ParentStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_subtitle</item>
        <item name="android:fontFamily">@font/helveticaneueltstdlt</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TextViewSize" parent="ParentStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/message_background</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TextViewOutgoingTimeStamp" parent="ParentStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/message_typing_background</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TextViewIncomingTimeStamp" parent="ParentStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_demo_experience</item>
        <item name="android:fontFamily">@font/helveticaneueltproth</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewTime" parent="ParentStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_subtitle</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewCounter" parent="ParentStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewError" parent="ParentStyle">
        <item name="android:textColor">@color/colorEet</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewMenuItem" parent="ParentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">24dp</item>
    </style>

    <style name="EmojiTextView" parent="ParentStyle" >
        <item name="android:textColor">#000</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_reaction</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>

    </style>

    <style name="AttachmentOption" parent="ParentStyle">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextViewSearch" parent="ParentStyle">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">21sp</item> <!--16px-->
    </style>

    <style name="SearchViewBackground">
        <item name="backgroundColor">@color/search_gray</item>
    </style>

    <style name="TextViewHeader" parent="ParentStyle">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">27sp</item> <!--20px-->
    </style>

    <style name="TextViewChildTitle" parent="ParentStyle">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">19sp</item> <!--14px-->
        <item name="fontWeight">500</item>
<!--        <item name="android:textFontWeight">700</item>-->
    </style>

    <style name="TextViewChildTime" parent="ParentStyle">
        <item name="android:textColor">@color/text_black_30_opacity</item>
        <item name="android:textSize">16sp</item> <!--12px-->
        <item name="fontWeight">400</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewChildSubTitle" parent="ParentStyle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16sp</item> <!--12px-->
        <item name="fontWeight">400</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Disclaimer" parent="ParentStyle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item> <!--12px-->
        <item name="fontWeight">400</item>
    </style>

    <style name="MessageListBackground">
        <item name="backgroundColor">@color/messagelist_background</item>
    </style>

    <style name="MessageBackground">
        <item name="backgroundColor">@color/message_background</item>
    </style>

    <style name="TextViewMessage" parent="ParentStyle">
        <item name="android:textColor">@color/message_text</item>
        <item name="android:textSize">19sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextViewMessageTime" parent="ParentStyle">
        <item name="android:textColor">@color/message_background</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/helveticaneueltproth</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextViewAlternateMessage" parent="ParentStyle">
        <item name="android:textColor">@color/alternate_message_text</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle"></item>
        <item name="android:fontFamily">@font/helveticaneueltstdlt</item>
    </style>

    <style name="TextViewMessageTyping" parent="ParentStyle">
        <item name="android:textColor">@color/alternate_message_text</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:fontFamily">@font/helveticaneueltproth</item>
    </style>

    <style name="TextViewMessageTypingBackground">
        <item name="backgroundColor">@color/message_typing_background</item>
    </style>

    <style name="TextViewConversationDetails" parent="ParentStyle">
<!--        Below color is black with opacity 77%-->
        <item name="android:textColor">#C4000000</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="ConversationDetails_Subtext" parent="ParentStyle">
        <item name="android:textColor">@color/alternate_message_text</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
    </style>
    <style name="AppBar_Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/helveticacdbd0</item>
        <item name="android:textColor">@color/completed</item>
    </style>
    <style name="Size_note" parent="ParentStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/helvetica</item>
    </style>
    <style name="TextHeadingPopup" parent="ParentStyle">
        <item name="android:textColor">@color/swipe_mute_background</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="TextSubtitlePopup" parent="ParentStyle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextInitials" parent="ParentStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">600</item>
    </style>
    <style name="TextViewDefaultContact" parent="ParentStyle">
        <item name="android:textColor">@color/default_contact_text</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/helveticaneueltproth</item>
    </style>
</resources>